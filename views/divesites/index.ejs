<% layout('layouts/boilerplate')%>
<div id="cluster-map"></div>
<div class="container">
<br></br>
<h1>All Dive Sites</h1>

<% for (let divesite of divesites){%>
<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
            <%if(divesite.images.length) {%>
            <img class="img-fluid" alt="" src="<%=divesite.images[0].url%>">
            <% }else {%>
            <img class="img-fluid" alt=""
                src="https://res.cloudinary.com/dygoxtmua/image/upload/v1617364354/YelpDive/ae2pngmncv6nb7vafsoo.jpg">
            <% } %>
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= divesite.title %>, <%= divesite.location %></h5>
                <!-- <p class="card-text"><%= divesite.description %></p> -->
                <p class="card-text">
                    <small class="text-muted"><%= divesite.description%></small>
                </p>
                <a class="btn btn-primary" href="/divesites/<%=divesite._id%>">View <%=divesite.title%></a>
            </div>
        </div>
    </div>
</div>
<% }%>
</div>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const divesites = {features: <%- JSON.stringify(divesites) %>}
</script>


<script src="/javascripts/clusterMap.js"></script>